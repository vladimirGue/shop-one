{
  "name": "shopi-ci",
  "version": "1.0.0",
  "description": "integracion continua para shopify",
  "main": "main.js",
  "scripts": {
    "test": "eslint . --ext .js,.jsx",
    "stylelint": "stylelint **/devNew/*.scss --syntax scss",
    "lint:scss:fix": "stylelint src/**/devNew/*.scss --syntax scss --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "watch": "cd src && theme watch",
    "deploy": "cd src && shopify-themekit deploy assets/newSections.js --env development",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladimirGue/shop-one.git"
  },
  "keywords": [
    "shopify",
    "CI"
  ],
  "author": "vladimir guerra m.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vladimirGue/shop-one/issues"
  },
  "homepage": "https://github.com/vladimirGue/shop-one#readme",
  "dependencies": {
    "@shopify/themekit": "^1.1.7",
    "archiver": "^5.2.0",
    "dotenv": "^8.2.0",
    "lint": "^0.7.0",
    "live-server": "^1.2.1",
    "ngrok": "^3.4.0",
    "shopify-api-node": "^3.6.5"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-shopify": "^35.1.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-shopify": "^7.4.0"
  },
  "lint-staged": {
    "src/**/devNew/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ],
    "src/**/devNew/*.{js,jsx}": [
      "eslint . --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "lint-staged",
      "pre-commit": "lint-staged"
    }
  }
}
