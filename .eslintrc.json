{
    "env": {
        "browser": true,
        "node":true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "plugin:shopify/esnext",
        "airbnb-base"
        ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "import/no-unresolved": ["error", {"ignore": ["^jquery"]}],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-underscore-dangle":"off"
    },
    "globals": {
        "document": true,
        "window": true,
        "Shopify": true,
        "theme": true
      }
}
